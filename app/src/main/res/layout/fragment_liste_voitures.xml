<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#658CBB">

    <TextView
        android:id="@+id/marqueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/marque_de_voiture"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/boutonEnregistres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voir les voitures enregistrées"
        android:backgroundTint="#00A36C"
        android:layout_gravity="center" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:visibility="visible"
        tools:listitem="@layout/modele_voitures" />

    <TextView
        android:id="@+id/aucunModeleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aucun modèle disponible."
        android:visibility="gone" />
</LinearLayout>
